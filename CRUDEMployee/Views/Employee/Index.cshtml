@model IEnumerable<EmpolyeeMSWeb.Models.Employees>

@{
    ViewData["Title"] = "Employee List";
}

<div class="container mt-4">
    <h1 class="mb-4">Employee List</h1>

    <p>
        <a asp-action="CreateEmployee" class="btn btn-primary">Create New Employee</a>
    </p>

    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Id)</th>
                <th>@Html.DisplayNameFor(model => model.EmployeeName)</th>
                <th>@Html.DisplayNameFor(model => model.Designetion)</th>
                <th>@Html.DisplayNameFor(model => model.Address)</th>
                <th>@Html.DisplayNameFor(model => model.Joindate)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.EmployeeName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Designetion)</td>
                    <td>@Html.DisplayFor(modelItem => item.Address)</td>
                    <td>@Html.DisplayFor(modelItem => item.Joindate)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>
                        <a asp-action="UpdateEmployee" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="GetEmployeeById" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="DeleteEmployee" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
