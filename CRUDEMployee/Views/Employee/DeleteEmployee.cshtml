@model EmpolyeeMSWeb.Models.Employees

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
                    <h4 class="text-center">Delete Employee</h4>
                    <i class="bi bi-exclamation-triangle-fill fs-3"></i> 
                </div>
                <div class="card-body">
                    <h5 class="text-center text-danger">Are you sure you want to delete this employee?</h5>
                    <p class="text-muted text-center">This action cannot be undone.</p>

                    <div class="employee-info">
                        <dl class="row text-start">
                            <dt class="col-sm-4 fw-bold">Employee ID:</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Id)</dd>

                            <dt class="col-sm-4 fw-bold">Name:</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.EmployeeName)</dd>

                            <dt class="col-sm-4 fw-bold">Designation:</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Designetion)</dd>

                            <dt class="col-sm-4 fw-bold">Address:</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Address)</dd>

                            <dt class="col-sm-4 fw-bold">Join Date:</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Joindate)</dd>

                            <dt class="col-sm-4 fw-bold">Email:</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>
                        </dl>
                    </div>

                    <!-- Trigger the delete confirmation modal -->
                    <div class="text-center mt-4">
                        <button class="btn btn-danger btn-lg px-5" data-bs-toggle="modal" data-bs-target="#deleteConfirmModal">
                            Delete
                        </button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg ms-2 px-5">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal for confirmation -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteConfirmModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <p class="text-danger fs-5">This action is irreversible. Are you sure you want to delete?</p>
                <i class="bi bi-trash3 fs-1 text-danger"></i> <!-- Trash icon -->
            </div>
            <div class="modal-footer justify-content-center">
                <form asp-action="DeleteEmployeeConfirm" asp-route-id="@Model.Id" method="post">
                    <button type="submit" class="btn btn-danger px-5">Yes, Delete</button>
                </form>
                <button type="button" class="btn btn-secondary px-5" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
