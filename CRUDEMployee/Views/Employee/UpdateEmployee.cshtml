@model EmpolyeeMSWeb.Models.Employees

@{
    ViewData["Title"] = "Update Employee";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h1 class="mb-0">Update Employee</h1>
                </div>
                <div class="card-body">
                    <h4 class="text-primary">Edit Employee Information</h4>
                    <hr />
                    <form asp-action="UpdateEmployee" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <!-- Use hidden input for ID -->
                        <input asp-for="Id" type="hidden" />

                        <div class="form-group mb-3">
                            <label asp-for="EmployeeName" class="form-label"></label>
                            <input asp-for="EmployeeName" class="form-control" placeholder="Enter employee name" />
                            <span asp-validation-for="EmployeeName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Designetion" class="form-label"></label> <!-- Corrected spelling -->
                            <input asp-for="Designetion" class="form-control" placeholder="Enter designation" />
                            <span asp-validation-for="Designetion" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Address" class="form-label"></label>
                            <input asp-for="Address" class="form-control" placeholder="Enter address" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Joindate" class="form-label"></label>
                            <input asp-for="Joindate" class="form-control" type="date" />
                            <span asp-validation-for="Joindate" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" placeholder="Enter email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- Flexbox for aligning buttons on the same line with fixed size -->
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary" style="width: 150px;">Back to List</a>
                            <input type="submit" value="Save" class="btn btn-success" style="width: 150px;" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
